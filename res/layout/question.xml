<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:weightSum="2" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_weight="1" android:layout_height="wrap_content"
		android:layout_width="0dp">
		<TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:text="Question:" android:layout_width="wrap_content" android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/editText1"
			android:lines="4" android:layout_width="match_parent"
			android:inputType="textMultiLine" android:layout_margin="4dip">
			<requestFocus></requestFocus>
		</EditText>
	
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_weight="1" android:layout_height="wrap_content"
		android:layout_width="0dp">
		<TextView android:layout_height="wrap_content" android:id="@+id/textView2" android:text="Answer:" android:layout_width="wrap_content" android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
		<EditText android:lines="4" android:layout_height="wrap_content"
			android:id="@+id/editText2" android:layout_width="match_parent"
			android:inputType="textMultiLine" android:layout_margin="4dip"></EditText>
	</LinearLayout>
</LinearLayout>