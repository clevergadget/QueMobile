<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:background="#0000CC" android:layout_height="18dp"
			android:text="This is where the actionbar will go"
			android:layout_width="fill_parent"></TextView>

	</LinearLayout>
	<LinearLayout android:layout_height="fill_parent"
		android:layout_width="match_parent" android:orientation="horizontal"></LinearLayout>
		<LinearLayout android:layout_width="24dp" android:layout_height="fill_parent" android:orientation="vertical"></LinearLayout>
	<LinearLayout android:weightSum="2" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dp">
			<TextView android:layout_height="wrap_content" android:id="@+id/textView1"
				android:text="Question:" android:layout_width="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
			<EditText android:layout_height="wrap_content" android:id="@+id/editText1"
				android:lines="5" android:layout_width="match_parent" android:editable="false"
				android:text="This is the last question that you were asked"
				android:textSize="11sp"
				android:inputType="textMultiLine" android:layout_margin="4dip">
				<requestFocus></requestFocus>
			</EditText>

		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dp">
			<TextView android:layout_height="wrap_content" android:id="@+id/textView2"
				android:text="Answer:" android:layout_width="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
			<EditText android:inputType="textMultiLine" android:textSize="11sp"
				android:hint="Enter an answer here"
				android:layout_height="wrap_content" android:lines="5" android:id="@+id/editText2"
				android:layout_width="match_parent" android:layout_margin="4dip"></EditText>
		</LinearLayout>
	</LinearLayout>
	<View android:id="@+id/divider" android:background="@drawable/black_white_gradient"
		android:layout_width="fill_parent" android:layout_height="1dp"></View>
	<LinearLayout android:weightSum="2" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dp">
			<TextView android:layout_height="wrap_content" android:id="@+id/textView1"
				android:text="Question:" android:layout_width="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
			<EditText android:layout_height="wrap_content" android:id="@+id/editText1"
				android:textSize="11sp"
				android:lines="5" android:layout_width="match_parent"
				android:inputType="textMultiLine" android:layout_margin="4dip">
				<requestFocus></requestFocus>
			</EditText>

		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dp">
			<TextView android:layout_height="wrap_content" android:id="@+id/textView2"
				android:text="Answer:" android:layout_width="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
			<EditText android:lines="5"
			android:textSize="11sp" android:layout_height="wrap_content"
				android:id="@+id/editText2" android:layout_width="match_parent"
				android:inputType="textMultiLine" android:layout_margin="4dip"></EditText>
		</LinearLayout>
	</LinearLayout>
	<View android:id="@+id/divider" android:background="@drawable/black_white_gradient"
		android:layout_width="fill_parent" android:layout_height="1dp"></View>
			
	<LinearLayout android:weightSum="2" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dp">
			<TextView android:layout_height="wrap_content" android:id="@+id/textView1"
				android:text="Question:" android:layout_width="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
			<EditText android:layout_height="wrap_content" android:id="@+id/editText1"
				android:editable="false"
				android:lines="5"
				android:text="How many licks does it take to get to the tootsie roll center of a tootise pop?"
				android:textSize="11sp" android:layout_width="match_parent"
				android:inputType="textMultiLine" android:layout_margin="4dip">
				<requestFocus></requestFocus>
			</EditText>

		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_width="0dp">
			<TextView android:layout_height="wrap_content" android:id="@+id/textView2"
				android:text="Answer:" android:layout_width="wrap_content"
				android:layout_marginLeft="8dip" android:layout_marginTop="2dip"></TextView>
			<EditText android:lines="5" android:textSize="11sp" android:layout_height="wrap_content"
				android:id="@+id/editText2" android:layout_width="match_parent" android:editable="false"
				android:inputType="textMultiLine" android:layout_margin="4dip" android:text="The world may never know"></EditText>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>